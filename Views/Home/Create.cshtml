@model CreateEmployeeViewModel
@{
    ViewBag.PageTitle = "Create Employee";
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-3">
    <div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name"/>
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <label asp-for="Department" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Department" class="custom-select mr-sm-2"
                 asp-items="Html.GetEnumSelectList<DepartmentEnum>()" > 
                     <option value="">--Select-- </option>
                 </select>
                      <span class="text-danger" asp-validation-for="Department"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>

<div><span class="text-danger">The following errors occured</span></div>
<div asp-validation-summary="All" class="text-danger">

</div>
        <div class="form-group row">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    <div>
        @section Scripts {
        <script>
               $(document).ready(function() {

                    console.log('File selection changed');

                    $('.custom-file-input').on("change", function() {
                        var fileName = $(this).val().split("\\").pop();
                        console.log('File Name : ' +fileName );

                        $(this).next('.custom-file-input').html(fileName);
                    });
               });     

        </script>
        }

</form>

